# Advay Vision Learning - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Application Environment
# Options: development, production
APP_ENV=production

# Secret Key for JWT tokens and encryption
# IMPORTANT: Generate a strong random key for production!
# Use: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database URL (PostgreSQL required)
# Format: postgresql+asyncpg://user:password@localhost:5432/dbname
# Note: SQLite is NOT supported - use PostgreSQL for both dev and production
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/advay_learning

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Debug mode - NEVER enable in production
DEBUG=False

# Allowed CORS origins (JSON array)
# Add your production frontend domain
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Frontend URL (for email links, redirects)
FRONTEND_URL=https://yourdomain.com

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# Access token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Refresh token expiration (days)
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Use local file storage (True for local, False for S3)
USE_LOCAL_STORAGE=True

# Local storage path (relative to backend directory)
LOCAL_STORAGE_PATH=./storage

# =============================================================================
# OPTIONAL: AWS S3 STORAGE
# =============================================================================
# Uncomment and fill if using S3 instead of local storage
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=your-bucket-name
# S3_REGION=us-east-1

# =============================================================================
# OPTIONAL: REDIS (for caching, sessions)
# =============================================================================
# Uncomment and fill if using Redis
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# OPTIONAL: EMAIL CONFIGURATION (for password reset, verification)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@yourdomain.com
